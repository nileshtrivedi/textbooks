{
  "name": "@mathigon/textbooks",
  "version": "0.7.4",
  "description": "Mathigon Textbooks",
  "homepage": "https://mathigon.org/",
  "repository": "mathigon/textbooks",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "server": "mgon-serve",
    "assets": "mgon-build --assets --locales en",
    "watch": "mgon-build --assets --watch --locales en",
    "start": "npm-run-all --parallel watch server",
    "translate": "mgon-build --translate --key google-service-account.json",
    "lint": "eslint content --ext .ts",
    "lint-fix": "eslint content --ext .ts --fix"
  },
  "engines": {
    "node": ">=16"
  },
  "dependencies": {
    "@mathigon/boost": "1.2.17",
    "@mathigon/core": "1.1.12",
    "@mathigon/euclid": "1.1.14",
    "@mathigon/fermat": "1.1.11",
    "@mathigon/hilbert": "1.1.11",
    "@mathigon/studio": "0.1.38",
    "@types/d3": "6.3.0",
    "@types/three": "0.91.14",
    "@types/topojson": "3.2.3",
    "npm-run-all": "4.1.5",
    "ts-node": "10.9.1",
    "typescript": "5.1.6"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "6.5.0",
    "@typescript-eslint/parser": "6.5.0",
    "eslint": "8.48.0",
    "eslint-config-google": "0.14.0",
    "eslint-plugin-import": "2.28.1"
  }
}
